{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "AIDOU2",
  "version": "3.1",
  "description": "方便搜索表情包并生成图片链接进行斗图",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background/index.js",
    "{{firefox}}.scripts": [
      "src/background/index.js"
    ]
  },
  "permissions": [
    "*://*/",
    "storage",
    "webRequest",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://*.sogou.com",
    "https://*.sogoucdn.com",
    "https://sm.ms/"
  ]
}